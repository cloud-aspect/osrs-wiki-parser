{
  "overrides": [
    {
      "files": ".prettierrc",
      "options": { "parser": "json" }
    },
    {
      "files": "*.html",
      "options": {
        "indent_style": "tab",
        "trim_trailing_whitespace": true,
        "max_line_length": 240,
        "bracket_same_line": true,
        "single_attribute_per-line": true,
        "html_whitespace_sensitivity": "ignore",
        "proseWrap": "never"
      }
    }
  ]
}
